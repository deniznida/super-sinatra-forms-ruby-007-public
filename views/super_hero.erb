<h1>Create a Team and Heroes!</h1>
<form action='/teams' method='post'>

<label>Team Name</label><input name="team[name]"/></br>
<label>Team Motto</label><input name="team[motto]"/></br>

<% 3.times do |i| %>

  <p>Hero <%=i+1%></p>

  <label>Hero's Name</label>
  <input name="team[members][super<%=i+1%>[name]"/></br>

  <label>Hero's Power</label>
  <input name="team[members][super<%=i+1%>[power]"/></br>


  <label>Hero's Bio</label>
  <input name="team[members][super<%=i+1%>[bio]"/></br>


<% end %></br>
<input type="submit">
</form>